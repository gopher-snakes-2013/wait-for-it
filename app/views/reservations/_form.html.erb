<%= form_for [@restaurant, @reservation], remote: true do |f| %>
  <%= f.text_field :name, placeholder: "Name"%>
  <%= f.text_field :party_size, placeholder: "Party Size"%>
  <%= f.text_field :phone_number, placeholder: "Phone Number"%>
  <%= f.text_field :wait_time, placeholder: "Wait Time"	%>
  <%= f.submit :class => 'submit_button'%>
<% end %>