<% if logged_in? %>

<nav id="main-nav">
  <ul id="nav-primary">
    <% logged_in_restaurant = Restaurant.find(session[:restaurant_id]) %>
    <li class="restaurant-name"><a href="#"><%= logged_in_restaurant.name %></a></li>
    <li class="subnav hidden"><%= link_to 'Logout', session_path(session), method: :delete %></li>
  </ul>
</nav>

<div id="time">
    <%= DateTime.now.strftime("%e %b %Y %l:%M %p") %>
</div>

<div class="add-reservation-form">
	<%= render "reservations/form" %>
</div>

<div class="error-message">
	<%= flash[:error] %>
</div>

<div class="table" data-restaurant-id="<%= @restaurant.id %>">
		<div class="table-head" >
			<span class="td name">Name</span>
			<span class="td status-head">Status</span>
			<span class="td party-size">Party Size</span>
			<span class="td phone-number">Phone Number</span>
      <span class="td wait-time">Wait Time</span>
			<span class="td seat-time">Seat Time</span>
		</div>

		<div class="table-body">
			<% @reservations.each do |reservation| %>
			<%= render partial: "reservations/show", locals: { restaurant: @restaurant, reservation: reservation } %>
			<% end %>
		</div>
	</div>
</div>

<% end %>
