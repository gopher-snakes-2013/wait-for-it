<div class="main">
	<p id="title1">don't</p>
	<p id="title2">Wait For It</p>
</div>

<%= render "reservations/form" %>

<div class="error-message">
  <%= flash[:error] %>
</div>

<div class="table">
  <table>
    <div class="table-headers">
      <tr>
        <th></th>
        <th>name</th>
        <th>party size</th>
        <th>phone number</th>
        <th>wait time</th>
        <th></th>
      </tr>
    </div>
    <% @reservations.each do |reservation| %>
      <tr class="rezzy" data-id="<%= reservation.id %>">
      <td><%= link_to 'X', reservation_path(reservation), method: 'delete', action: 'destroy', class: 'delete hidden' %></td>
      <td><%= reservation.name %></td>
      <td><span class="party-size" data-id="<%= reservation.id %>"><%= reservation.party_size %></span></td>
      <td><%= reservation.phone_number %></td>
      <td><%= reservation.wait_time %></td>
      <td><button class="message-ready"></button></td>
      <tr>
    <% end %>
  </table>
</div>
